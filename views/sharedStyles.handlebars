            color: white;
            border: solid 0.13rem #262b30;
            font-weight: 700;
            font-size: 1rem;
            text-decoration: none;
            transition: var(--transition);
        }

        .btn-github:hover {
            background: transparent;
            box-shadow: var(--box-shadow);
        }

        .btn-github i {
            font-size: 1.1rem;
        }

        .login-links {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5rem;
            font-size: 0.9rem;
        }

        .login-link {
            color: var(--text-light);
            transition: var(--transition);
