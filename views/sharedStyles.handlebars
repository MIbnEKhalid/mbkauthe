            border: .1rem solid var(--accent);
            cursor: pointer;
            transition: all 0.4s cubic-bezier(.4, 0, .2, 1);
            box-shadow: var(--box-shadow);
        }

        .btn-login:hover {
            background: var(--dark);
            color: var(--accent);
            box-shadow: 0 6px 20px rgba(0, 184, 148, 0.3);
        }

        .btn-login:disabled {
            background: var(--dark);
            color: var(--accent);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .social-login {
            margin-top: 1.5rem;
            text-align: center;
        }

        .divider {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 1rem 0;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--text-light);
            opacity: 0.3;
        }

        .divider span {
            background: rgba(10, 20, 20, 0.95);
            padding: 0 15px;
            color: var(--text-light);
            font-size: 0.9rem;
        }

        .btn-github {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 100%;
            padding: 12px 20px;
            border-radius: var(--border-radius);
