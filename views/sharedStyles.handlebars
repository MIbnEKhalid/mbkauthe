        .form-input:not(:placeholder-shown)+.form-label {
            top: -10px;
            left: 15px;
            font-size: 0.8rem;
            background: rgba(10, 20, 20, 0.95);
            padding: 0 5px;
            color: var(--accent);
        }

        .input-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
