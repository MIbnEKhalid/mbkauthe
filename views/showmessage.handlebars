<div class="showMessageOverlay" id="messageOverlay" aria-hidden="true" hidden>
    <div class="messageModal" role="dialog" aria-modal="true" aria-labelledby="messageTitle"
        aria-describedby="messageContent">
        <div class="messageHeader">
            <div class="messageIcon">
                <i class="fas fa-info-circle"></i>
            </div>
            <h2 id="messageTitle">Notification</h2>
        </div>

        <div class="messageBody">
            <p id="messageContent"></p>
            <a href="#" target="_blank" class="errorCodeBadge" id="errorCodeLink" style="display: none;">
                <i class="fas fa-bug"></i>
                <span id="errorCodeText"></span>
            </a>
        </div>

        <div class="messageFooter">
            <button class="btn-message-action" onclick="hideMessage()">Okay</button>
        </div>
    </div>
</div>

<script>
    // Sanitize HTML to prevent XSS while allowing safe HTML tags
    function sanitizeHTML(html) {
        if (!html) return "";

        // Use DOMParser for safer parsing
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, "text/html");

        const allowedTags = ["b", "i", "u", "strong", "em", "br", "p", "span", "div", "a"];
        const allowedAttrs = ["href", "target", "class", "id", "style"];

        function cleanNode(node) {
            const children = Array.from(node.childNodes);
            for (const child of children) {
                if (child.nodeType === 1) { // Element
                    const tagName = child.tagName.toLowerCase();
                    if (allowedTags.includes(tagName)) {
                        // Clean attributes
                        const attrs = Array.from(child.attributes);
                        for (const attr of attrs) {
                            const attrName = attr.name.toLowerCase();
                            if (!allowedAttrs.includes(attrName) || attrName.startsWith("on")) {
                                child.removeAttribute(attr.name);
                            } else if (attrName === "href" && attr.value.toLowerCase().trim().startsWith("javascript:")) {
                                child.removeAttribute("href");
                            }
                        }
                        cleanNode(child);
                    } else {
                        // Disallowed tag: replace with text content
                        const text = document.createTextNode(child.textContent);
                        child.replaceWith(text);
                    }
                } else if (child.nodeType !== 3) { // Remove comments etc.
                    child.remove();
                }
            }
        }

        cleanNode(doc.body);
        return doc.body.innerHTML;
    }

    function showMessage(message, heading, errorCode) {
        const overlay = document.getElementById("messageOverlay");
        const titleEl = document.getElementById("messageTitle");
        const contentEl = document.getElementById("messageContent");
        const errorLink = document.getElementById("errorCodeLink");
        const errorText = document.getElementById("errorCodeText");
        const iconEl = document.querySelector(".messageIcon i");

        // Set content
        titleEl.innerText = heading || "Notification";

        // Handle HTML content safely
        if (message && message.includes("<")) {
            contentEl.innerHTML = sanitizeHTML(message);
        } else {
            contentEl.innerText = message || "";
        }

        // Update Icon based on heading/context (simple heuristic)
        const lowerHeading = (heading || "").toLowerCase();
        iconEl.className = "fas"; // Reset
        if (lowerHeading.includes("error") || lowerHeading.includes("failed")) {
            iconEl.classList.add("fa-exclamation-circle");
            document.querySelector(".messageIcon").style.background = "rgba(255, 118, 117, 0.1)";
            document.querySelector(".messageIcon").style.color = "var(--danger, #ff7675)";
        } else if (lowerHeading.includes("success")) {
            iconEl.classList.add("fa-check-circle");
            document.querySelector(".messageIcon").style.background = "rgba(67, 233, 123, 0.1)";
            document.querySelector(".messageIcon").style.color = "var(--success, #43e97b)";
        } else if (lowerHeading.includes("warning")) {
            iconEl.classList.add("fa-exclamation-triangle");
            document.querySelector(".messageIcon").style.background = "rgba(255, 209, 102, 0.1)";
            document.querySelector(".messageIcon").style.color = "var(--warning, #ffd166)";
        } else {
            iconEl.classList.add("fa-info-circle");
            document.querySelector(".messageIcon").style.background = "rgba(33, 150, 243, 0.1)";
            document.querySelector(".messageIcon").style.color = "var(--primary, #2196f3)";
        }

        // Handle Error Code
        if (errorCode) {
            errorLink.style.display = "inline-flex";
            errorText.innerText = `Code: ${errorCode}`;
            errorLink.href = `/mbkauthe/ErrorCode/#${errorCode}`;
        } else {
            errorLink.style.display = "none";
        }

        // Show Modal
        overlay.removeAttribute("hidden");
        overlay.classList.add("active");
        document.body.classList.add("blur-active");
        overlay.setAttribute("aria-hidden", "false");

        // Focus trap could be added here for accessibility
        document.querySelector(".btn-message-action").focus();
    }

    function hideMessage() {
        const overlay = document.getElementById("messageOverlay");
        overlay.classList.add("fade-out");

        setTimeout(() => {
            overlay.classList.remove("active", "fade-out");
            document.body.classList.remove("blur-active");
            overlay.setAttribute("aria-hidden", "true");
            overlay.setAttribute("hidden", "");
        }, 300);
    }

    // Close on click outside
    document.getElementById("messageOverlay").addEventListener("click", function (e) {
        if (e.target === this) {
            hideMessage();
        }
    });

    // Close on Escape key
    document.addEventListener("keydown", function (e) {
        if (e.key === "Escape" && document.getElementById("messageOverlay").classList.contains("active")) {
            hideMessage();
        }
    });
</script>

